{
  "scripts": {
    "test": "jest",
    "test:w": "jest --watch",
    "build": "rm -rf dist && tsc -p .",
    "release": "yarn test && yarn build && np --yolo",
    "precommit": "lint-staged",
    "checkts": "tsc -p . --noEmit",
    "createRealLifeTest": "ts-node -T ./realLifeTests/createRealLifeTest.ts"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "css": "^2.2.3"
  },
  "devDependencies": {
    "@types/css": "^0.0.31",
    "@types/jest": "^23.1.6",
    "@types/mkdirp": "^0.5.2",
    "@types/puppeteer": "^1.5.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "mkdirp": "^0.5.1",
    "np": "^3.0.4",
    "prettier": "^1.13.7",
    "puppeteer": "^1.6.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "name": "initial-css-builder",
  "version": "1.0.3",
  "description": "Filter your CSS to keep only what your HTML uses",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/testerez/initial-css-builder",
  "author": "Tom Esterez <testerez@gmail.com>",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.*.test.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
